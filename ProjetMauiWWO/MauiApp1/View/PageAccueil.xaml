<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.View.PageAccueil"
             BackgroundColor="Black">

    

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Image Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
               Source="image4.png"
               Aspect="AspectFill"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="Start"
               Margin="0,-100,0,0" />

        <StackLayout ClassId="section-Accueil"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Margin="0,-300,0,0">

            <Label Text="Bienvenue sur One Way Work !"
                   FontSize="Header"
                   HorizontalTextAlignment="Center"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <Label Text="Un endroit sécurisé et adapté aux étudiants !"
                   HorizontalOptions="Center"
                   FontSize="Title"
                   TextColor="White"
                   FontAttributes="Bold"/>
            
        </StackLayout>
    </Grid>
</ContentPage>
